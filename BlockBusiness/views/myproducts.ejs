<!DOCTYPE html>
<html lang="en">

<head>
    <!--<title>My products</title>-->
    <title><%=title%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="N-Air Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design"
    />
    <script type="application/x-javascript">
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <meta charset utf="8">
    <!--fonts-->
    <link href='https://fonts.googleapis.com/css?family=Fredoka+One' rel='stylesheet' type='text/css'>

    <!--fonts-->
    <!--form-css-->
    <link href="/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <!--bootstrap-->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <!--coustom css-->
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <!--shop-kart-js-->
    <script src="/js/simpleCart.min.js"></script>
    <!--default-js-->
    <script src="/js/jquery-2.1.4.min.js"></script>
    <!--bootstrap-js-->
    <script src="/js/bootstrap.min.js"></script>
    <!--script-->
    <!-- FlexSlider -->
    <script src="/js/imagezoom.js"></script>
    <script defer src="/js/jquery.flexslider.js"></script>
    <link rel="stylesheet" href="/css/flexslider.css" type="text/css" media="screen" />
    <link href="/css/notice.css" rel="stylesheet" type="text/css">
    <script>
        // Can also be used with $(document).ready()
        $(window).load(function() {
            $('.flexslider').flexslider({
                animation: "slide",
                controlNav: "thumbnails"
            });
        });
    </script>
    <!-- //FlexSlider-->
</head>

<body>
<%include header.ejs%>
<!--2.search-->
<%include searchbar.ejs%>


<!--3.start -->
<div class="head-bread">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/index">Home</a></li>
            <li class="active"><%=title%></li>
        </ol>
    </div>
</div>
<!--3.end -->


<!--4.start -->
<div class="products-gallery">
    <div class="container">
        <div class="col-md-12 grid-gallery">

            <%
               for (var i=0 ; i<JSON.parse(JSON.stringify(result)).length; i++){
                 
                   var each = JSON.parse(JSON.stringify(result))[i];
                   
            %>
            <div class="col-md-4 grid-stn simpleCart_shelfItem">
                <!-- normal -->
                <div class="ih-item square effect3 bottom_to_top">
                    <div class="bottom-2-top">
                       <!-- <div class="img"><img src="<%=each.imgPath%>" alt="/" class="img-responsive gri-wid"></div>-->
                       <div class="img img-thumbnail"><img style="width: 300px; height: 200px" src="<%=each.imgPath%>" alt="/" class="img-responsive gri-wid"></div>
                       <div class="info">
                            <div class="pull-left styl-hdn">
                                <h3 style="white-space: nowrap;max-width: 100px; overflow: hidden "><%=each.productName%></h3>
                            </div>
                            <div class="pull-right styl-price">
                                <p><a href="#" class="item_add"><span class="glyphicon glyphicon-shopping-cart grid-cart" aria-hidden="true"></span> <span>
                                        <img class="eth_small" src="/images/eth.png"></img>
                                        </span><%=each.productPrice%></a></p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <!-- end normal -->
                <div class="quick-view">
                    <a href="/single/showproduct?pid=<%=each._id%>">Quick view</a>
                </div>
            </div>

            <%
               }
               if (JSON.parse(JSON.stringify(result)).length==0){


            %>
            <div>
                <h3 align="middle">You haven't post any products. Please
                <a class="btn btn-default log-bar" href="/addproduct" >Add product</a></h3>
                <!--<a class="btn btn-default log-bar" href="/addproduct" role="button">Add product</a></h3>-->
            </div>


            <%
            }
             %>

            <div class="clearfix"></div>
        </div>

        <div class="clearfix"></div>
    </div>
</div>
<!--4.end -->

<!--5.foot start -->
<%include footer.ejs%>

</body>

</html>
